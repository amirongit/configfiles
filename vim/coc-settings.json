{
  "coc.preferences.jumpCommand": "tab drop",
  "diagnostic.messageTarget": "echo",
  "diagnostic.floatConfig": {
    "border": true,
    "maxWidth": 90,
    "maxHeight": 90
  },
  "diagnostic.showUnused": false,
  "diagnostic.warningSign": ">",
  "diagnostic.errorSign": "*",
  "diagnostic.infoSign": ">",
  "diagnostic.hintSign": ">",
  "git.changeRemovedSign.text":"-",
  "git.conflictedDecorator": "*",
  "git.topRemovedSign.text": "-",
  "git.untrackedDecorator": "?",
  "git.changedDecorator": "~",
  "git.changedSign.text": "~",
  "git.removedSign.text": "-",
  "git.branchCharacter": "b",
  "git.stagedDecorator": "+",
  "git.addedSign.text": "+",
  "hover.target": "preview",
  "hover.floatConfig": {
    "border": true,
    "maxWidth": 90,
    "maxHeight": 90
  },
  "hover.autoHide": false,
  "pyright.organizeimports.provider": "pyright",
  "pyright.inlayHints.variableTypes": false,
  "pyright.inlayHints.functionReturnTypes": false,
  "python.sortImports.args": ["--up", "-l 120"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.linting.flake8Enabled": false,
  "python.linting.enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120"],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "mypy",
  "python.linting.mypyArgs": [
      "--no-pretty",
      "--ignore-missing-imports",
      "--follow-imports=silent",
      "--show-column-numbers"
  ],
  "lua.enable": true,
  "Lua.codeLens.enable": true,
  "Lua.completion.showWord": "Disable",
  "signature.hideOnTextChange": false,
  "signature.target": "echo",
  "signature.floatConfig": {
    "border": true,
    "maxWidth": 90,
    "maxHeight": 90
  },
  "inlayHint.display": true,
  "inlayHint.enable": true,
  "inlayHint.enableParameter": true,
  "inlayHint.refreshOnInsertMode": true,
  "codeLens.enable": true,
  "codeLens.position": "right_align",
}

	    focused_workspace  $bg-color           $bg-color           $text-color
		inactive_workspace $bar-bg             $bar-bg             $inactive-text-color
		urgent_workspace   $urgent-bg-color    $urgent-bg-color    $inactive-text-color
    }
}


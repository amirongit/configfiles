set $mod Mod4
floating_modifier $mod
font pango:Font Awesome Bold 7
#new_float normal

#for_window [class="."] border pixel 1
gaps inner 10
gaps outer 5
#smart_borders on

set $bg-color 	         #354151
set $inactive-bg-color   #282c34
set $text-color          #d4d4d4
set $inactive-text-color #d4d4d4
set $urgent-bg-color     #e06c75
set $bar-bg              #1e1e1e

exec --no-startup-id nitrogen --restore
exec --no-startup-id compton --config ~/.config/compton/compton.conf
exec --no-startup-id xset -b
exec --no-startup-id setxkbmap -option grp:alt_shift_toggle us,ir

bindsym Print exec scrot '%m-%d_%H-%M-%S_shot.png' -e 'mv $f ~/Pictures/scrot/'
bindsym $mod+d exec dmenu_run -p run: -nb '$bar-bg' -sf '$text-color' -sb '$bg-color' -fn 'Blogger Sans' #-b
bindsym $mod+Return exec termite

bindsym $mod+Shift+q kill
bindsym $mod+Shift+r reload

bindsym $mod+F7 exec xbacklight -inc 5%
bindsym $mod+F8 exec xbacklight -dec 5%
bindsym $mod+F6 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym $mod+F5 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%

bindsym XF86MonBrightnessUp exec xbacklight -inc 10%
bindsym XF86MonBrightnessDown exec xbacklight -dec 10%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%

bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down


bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down

bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+f floating toggle

bindsym $mod+Tab focus mode_toggle

bindsym $mod+Down split v
bindsym $mod+Right split h

bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+space bar mode toggle

set $ws1 "1:[ RCH ]"
set $ws2 "2:[ WWW ]"
set $ws3 "3:[ DEV ]"
set $ws4 "4:[ GFX ]"
set $ws5 "5:[ SYS ]"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

assign [class="Inkscape"] $ws4
assign [class="Steam"] $ws4

{
    "workbench.startupEditor": "none",
    "http.proxy": "socks5://localhost:2080",
    "files.autoSave": "onWindowChange",
    "workbench.editor.empty.hint": "hidden",
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontSize": 16,
    "editor.fontLigatures": "'cv02', 'cv03', 'cv04', 'cv05', 'cv06', 'cv07', 'cv11', 'cv14', 'cv16', 'cv17', 'cv18', 'cv19', 'cv20', 'cv99'",
    "editor.renderWhitespace": "all",
    "editor.cursorStyle": "block",
    "editor.wordWrap": "on",
    "editor.codeActionWidget.includeNearbyQuickFixes": false,
    "editor.codeActionWidget.showHeaders": false,
    "editor.codeLensFontFamily": "JetBrains Mono",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": false,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.lightbulb.enabled": "off",
    "editor.lineNumbers": "relative",
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.stablePeek": true,
    "editor.stickyScroll.enabled": false,
    "editor.tabCompletion": "on",
    "editor.useTabStops": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.inlineSuggest.fontFamily": "JetBrains Mono",
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",
    "window.customTitleBarVisibility": "auto",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimInitVimPaths.linux": "/home/amir/.config/nvim/init.vim",
    "python.defaultInterpreterPath": "/home/amir/.pyenv/versions/3.12.1/bin/python",
    "ruff.codeAction.disableRuleComment": {
        "enable": false
    },
    "ruff.codeAction.fixViolation": {
        "enable": false
    },
    "ruff.lint.run": "onSave",
    "git.openRepositoryInParentFolders": "never"
}
